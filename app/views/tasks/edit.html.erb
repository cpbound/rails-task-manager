<div class="container">
  <h1>Edit a Task!</h1>

  <%= form_for(@task) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :details %>
    <%= f.text_field :details %>
    <%= f.label :completed %>
    <%= f.text_field :completed %>
    <%= f.submit class: "btn btn-primary mt-3" %>

  <% end %>

</div>

<div>
  <%= link_to "Home", tasks_path %>
</div>
